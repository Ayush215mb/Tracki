generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Task {
  id          String @id @default(uuid())
  name        String
  description String
  points      Int
}

model Completion {
  id        String  @id @default(uuid())
  TaskId    String
  date      Int
  month     Int
  completed Boolean @default(false)
}
